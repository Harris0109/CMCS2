<Page x:Class="CMCS2.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMCS2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>

        <TextBlock Text="Admin Login" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <Label Content="Admin ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,80,0,0"/>
        <TextBox x:Name="AdminIDTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,80,0,0" Width="150"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,130,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,130,0,0" Width="150"/>

        <Button Content="Login" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0"
                Click="LoginButton_Click"/>

    </Grid>
</Page>
